<div class="m-4">
  <div class="row">
    {{#if courses}}
      {{#if (same "teacher" isStudent)}}
        <h1>
          Khoá học của bạn
        </h1>
        {{else}}
        <h1>
          Khoá học đề xuất cho bạn
        </h1>
      {{/if}}
    {{/if}}
    {{#each courses}}
      <div
        class="card course-card"
        style="width: 18rem; margin: 10px; padding: 0"
      >
        <a href="/courses/{{this.slug}}">
          <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" />
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Đăng Ký</a>
        </div>
      </div>
    {{else}}

      <div class="containers">
        <img class="img-empty-course" src="/img/empty.png" alt="No content" />
        <h3>Hiện tại vẫn chưa có khoá học nào được tạo!</h3>
        <a
          class="btn bg-success text-white btn-lg mt-2"
          href="/courses/create"
          role="button"
        >Tạo khoá học</a>
      </div>
    {{/each}}
  </div>
</div>