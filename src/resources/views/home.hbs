<div class="m-4">
    <div class="row">
            {{#each courses}}
        
            <div class="card course-card" style="width: 18rem; margin: 10px; padding: 0">
                <a href="/course/{{this.slug}}">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Dang Ky</a>
                </div>
            </div>
            {{/each}}
    </div>
</div>