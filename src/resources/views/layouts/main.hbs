<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>F8 - Học Lập Trình Để Đi Làm</title>
    <link
      rel="icon"
      href="https://lh3.googleusercontent.com/p/AF1QipN7NJcUBnM3MENzywr2yZ-FgjgzQGrWiZ4TfLIu=s1360-w1360-h1020"
      type="image/x-icon"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    ></script>
    <link rel="stylesheet" href="/css/app.css" />
    <link
      rel="stylesheet"
      href="/vendor/fontawesome-free-6.7.2-web/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/createCourse.css" />
  </head>
  <body>
    <nav
      class="navbar navbar-expand navbar-dark bg-dark d-flex"
      aria-label="Second navbar example"
    >
      <div class="container-fluid containers-navbar pe-1">
        <a class="navbar-brand" href="/home">F8 Education</a>
        <ul class="navbar-nav">
          {{#if (not isHomepageWhenNotLogin)}}
            {{#if (same "teacher" isStudent)}}
              <li class="nav-item">
                <a class="nav-link" href="/courses/create">Tạo khoá học</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/me/stored/courses">Khóa học của tôi</a>
              </li>
            {{/if}}
          {{/if}}

        </ul>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarsExample02"
          aria-controls="navbarsExample02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarsExample02"
        >
          <ul class="navbar-nav ml-auto d-flex align-items-center">
            {{#if (not isHomepageWhenNotLogin)}}
              <li class="nav-item">
                <a
                  href="/auth/sign-out"
                  class="btn btn-outline-success my-2 my-sm-0"
                >Đăng Xuất</a>
              </li>

              <li class="nav-item">
                <a
                  class="nav-link text-white mx-2 d-flex align-items-center"
                  href="/me/profile"
                >
                  <img
                    class="rounded-circle me-2"
                    src="{{avatar}}"
                    alt="User"
                  />
                  <p class="fs-6 user-name">
                    {{fullName}}
                  </p>
                </a>
              </li>
            {{/if}}
          </ul>

        </div>
      </div>
    </nav>

    {{{body}}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>