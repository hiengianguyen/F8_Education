<div class="profile-user rounded shadow-sm bg-body-tertiary">
  <div class="info-top containers mb-3">
    <img
      class="profile-img-user rounded-circle mt-2"
      src="{{user.avatar}}"
      alt="User"
    />
  </div>
  <div class="info profile-dad-name mx-5">
    <div class="info-sub mt-10 containers">
      <div class="profile-dad-name mb-2">
        <label for="profile-name-input" class="form-label-profile">Họ và Tên:</label>
        <h4 class="profile-name-user">
          {{user.fullName}}
        </h4>
      </div>
      <div class="info-bt mb-3">
        <label
          for="profile-email-input"
          class="form-label-profile"
        >Email:</label>
        <p class="profile-email-user mb-2">{{user.email}}</p>
        <label for="profile-phone-input" class="form-label-profile">Số điện
          thoại:</label>
        <p class="profile-phone-user mb-2">{{user.phoneNumber}}</p>
        <label for="profile-phone-input" class="form-label-profile">Vai trò:</label>
        <p class="profile-phone-user m-0">{{role}}</p>
      </div>
    </div>
    <div class="btn-edit d-flex justify-content-end">
      <a href="/me/profile/edit" class="btn btn-secondary btn-lg">Chỉnh Sửa</a>
    </div>
  </div>
</div>