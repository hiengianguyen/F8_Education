<div class="m-4">
  <h3>Khóa học của tôi</h3>
    <div class="row">
        <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">VideoId</th>
                <th scope="col" colspan="2">Slug</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.videoId}}</td>
                <td>{{this.slug}}</td>
                <td>
                    <a href="/course/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
                    <a href="/course/{{this._id}}/delete" class="btn btn-danger">Xóa</a>
                </td>
                
                    
            </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
</div>