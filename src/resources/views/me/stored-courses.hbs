<div class="m-4">
  <div >
    <h3>Khóa học của tôi </h3>
    <a href="/me/trash/courses">Thùng Rác  ({{deleteCount}})</a>
    </div>
    <div class="row">
        <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Mô tả</th>
                <th scope="col" colspan="2">Cập nhật lúc</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.updatedAt}}</td>
                <td>
                    <a href="/course/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
                    <a href="/course/{{this._id}}/delete" class="btn btn-danger" data-bs-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#delete-course-modal">Xóa</a>
                </td>  
            </tr>

            {{else}}
              <tr class="text-center">  
                <td colspan="4">There are no courses
                  <a href="/course/create">Create Course</a>
                  </td>
              </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
</div>

<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog mt-5">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Course</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Do you want to delete this course.</p>
      </div>
      <div class="modal-footer">
        <button id="btn-destroy-course" type="button" class="btn btn-danger">Destroy</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
  <form id="form-hid-detete" method="POST">
<script>
const exampleModal = document.getElementById('delete-course-modal')
if (exampleModal) {
    var courseId;
  exampleModal.addEventListener('show.bs.modal', function(event) {
    const button = event.relatedTarget
    courseId = button.getAttribute('data-bs-id');
    const btnDestroyCourse = document.getElementById("btn-destroy-course")
    const deleteForm = document.getElementById("form-hid-detete")
    btnDestroyCourse.onclick = () => {
        const formDelete = document.getElementById("form-hid-detete")
        deleteForm.action = "/course/" + courseId + "?_method=DELETE";
        deleteForm.submit();   }
   
  })
}

</script>