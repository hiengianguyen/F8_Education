<div class="title-edit-lesson ps-4 pt-2">
    <h5>Tạo bài học thứ: {{currentOrder}}</h5>
    <h5>Khóa học: {{course.name}}</h5>
</div>

<div class="mt-2 container">
  <form id="create-lesson-form" method="POST">
    <div class="contact-form">
      <div class="mb-2 form-group">
        <label for="name-input" class="form-label">Tên bài học</label>
        <input
          type="text"
          name="name"
          rules="required|min:5"
          class="form-control login__input"
          id="name-input"
          value="{{currentLesson.name}}"
        />
        <span class="form-message"></span>
      </div>

      <div class="mb-2 form-group">
        <label for="videoUrl-input" class="form-label">Đường dẫn video
          (Youtube)</label>
        <input
          type="text"
          name="videoUrl"
          rules="required|urlYoutube"
          class="form-control login__input"
          id="videoUrl-input"
          value="{{currentLesson.videoUrl}}"
        />
        <span class="form-message"></span>
      </div>
      <div class="d-flex justify-content-end">
        <button class="btn btn-primary">Tạo bài học</button>
      </div>
    </div>
  </form>
</div>

<script
  src="/validationForm.js"
  onload="varidator('#create-lesson-form')"
></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const formCreateLesson = document.getElementById('create-lesson-form');
        const buttonSubmitCreateLesson = formCreateLesson.querySelector('button');

        buttonSubmitCreateLesson.addEventListener("click", () => {
            currentUpdateLessonUrl = currentUrl;
            formCreateLesson.action = currentUpdateLessonUrl;
            formCreateLesson.submit();
        })
    });
</script>
