  const inputChooseFileImg = document.getElementById("form-course-img");
  const imgCourse = document.getElementById("course-img");
  const hiddenCourseInput = document.getElementById("course-img-input");

  inputChooseFileImg.addEventListener("change", (event) => {
    const file = event.target.files[0];
